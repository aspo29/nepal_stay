<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Add New Accommodation</h3>
            <form action="/accommodations" method="POST" class="needs-validation" novalidate
                enctype="multipart/form-data">
                <div class="mb-3 mt-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="title" placeholder="Add a catchy title" type="text" class="form-control" id="title"
                        required>
                    <div class="valid-feedback">
                        Title looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a title!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" class="form-control" id="description" required></textarea>
                    <div class="valid-feedback">
                        Description looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a description!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input name="image" type="text" class="form-control" id="image">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="price" placeholder="1200" type="number" class="form-control" id="price" required>
                        <div class="valid-feedback">
                            Price looks reasonable!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a valid price!
                        </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input name="location" placeholder="Pokhara, Kaski" type="text" class="form-control"
                            id="location" required>
                        <div class="valid-feedback">
                            Location looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a valid location!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="country" placeholder="Nepal" type="text" class="form-control" id="country" required>
                    <div class="valid-feedback">
                        Country looks great!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid country!
                    </div>
                </div>
                <button class="btn add-btn mb-3 mt-3" type="submit">Add Accommodation</button>
            </form>

            <a href="/accommodations" class="btn btn-secondary mt-3">Back to list</a>
        </div>
    </div>