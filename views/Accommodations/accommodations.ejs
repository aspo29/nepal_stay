<!-- views/accommodations.ejs -->
<% layout("layouts/boilerplate") %>

    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-evenly;
            align-items: center;
            gap: 1rem;
        }

        .filter {
            flex:  0 1 4rem;
            text-align: center;
            padding-top: 1rem;
            opacity: 0.7;
            transition: opacity 0.2s;
        }


        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
            ;
        }

        .tax-info {
            display: none;
        }

        .switch {
            border: 1px solid black;
            border-radius: 1rem;
            padding: 1rem;
            display: flex;
            align-items: center;
            background-color: #f8f9fa;
        }

        .switch .form-check-label {
            margin-left: 0.5rem;
        }
    </style>

    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-house"></i></div>
            <p>Room</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-building"></i></div>
            <p>Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountain</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castle</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Pool</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farm</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowman"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-sailboat"></i></div>
            <p>Boats</p>
        </div>
        <div class="switch">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display taxes</label>
            </div>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% data.forEach(accommodation=> { %>
            <a href="/accommodations/<%= accommodation.id %>" class="accommodation-link">
                <div class="card col accommodation-card">
                    <img src="<%= accommodation.image %>" class="card-img-top" alt="accommodation-image"
                        style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"><b>
                                <%= accommodation.title %>
                            </b><br>
                            &#x930;&#x942; <%= accommodation.price.toLocaleString("EN-NP") %> / night
                                <i class="tax-info"> &nbsp;&nbsp;+18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% }); %>
    </div>