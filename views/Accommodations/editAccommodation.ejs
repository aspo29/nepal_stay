<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your Accommodation</h3>
            <form action="/accommodations/<%= accommodation._id %>?_method=PUT" method="POST" novalidate
                class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3 mt-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="title" value="<%= accommodation.title %>" type="text" class="form-control" id="title"
                        required>
                    <div class="valid-feedback">
                        Title looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a title!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" class="form-control" id="description"
                        required><%= accommodation.description %></textarea>
                    <div class="valid-feedback">
                        Description looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a description for the accommodation!
                    </div>
                </div>

                <div class="mb-3">
                    <h5>Original Accommodation Image</h5>
                    <img src="<%= accommodation.image %>" alt="Accommodation Image" class="img-fluid">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">New Image</label>
                    <input name="image" type="file" class="form-control" id="image">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="price" value="<%= accommodation.price %>" type="number" class="form-control"
                            id="price" required>
                        <div class="valid-feedback">
                            Price looks reasonable!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a valid price!
                        </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input name="location" value="<%= accommodation.location %>" type="text" class="form-control"
                            id="location" required>
                        <div class="valid-feedback">
                            Location looks beautiful!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a valid location!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="country" value="<%= accommodation.country %>" type="text" class="form-control"
                        id="country" required>
                    <div class="valid-feedback">
                        Country looks marvelous!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid country name!
                    </div>
                </div>

                <button class="btn edit-btn mt-3 mb-3">Update Accommodation</button>
            </form>
            <a href="/accommodations" class="btn btn-secondary mt-3">Back to list</a>
        </div>
    </div>